<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/transparent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/selected_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">



</RelativeLayout>

            <TextView
                android:id="@+id/txt_placeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Task Code"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="8dp"
                android:background="@drawable/select_car_design"
                android:padding="8dp"/>

            <TextView
                android:textColor="@color/black"
                android:id="@+id/txt_selectedTaskCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Organization: "
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:padding="8dp"/>
            <TextView
                android:id="@+id/txt_pickLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Pick up: "
                android:textSize="18sp"
                android:layout_marginTop="2dp"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/txt_dropLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Drop: "
                android:textSize="18sp"
                android:layout_marginTop="2dp"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/txt_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Type: "
                android:textSize="18sp"
                android:layout_marginTop="2dp"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/txt_upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Time: "
                android:textSize="18sp"
                android:layout_marginTop="2dp"
                android:padding="8dp"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_selectedTypeOfGoods"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Type of Goods"
                    android:textSize="18sp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/collection_type_border_rounded"
                    android:padding="8dp" />
                <TextView
                    android:id="@+id/select_task_button"
                    android:background="@drawable/select_task_border_rounded"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Select Task"
                    android:layout_alignParentEnd="true"
                    android:textSize="18sp"
                    android:padding="8dp"/>

            </RelativeLayout>


        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>