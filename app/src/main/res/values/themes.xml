<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Utrun" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/Apple_green</item>
        <item name="colorPrimaryVariant">@color/Medium_Sea_Green_Color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/Nyanza</item>
        <item name="colorSecondaryVariant">@color/green</item>
        <item name="colorOnSecondary">@color/Davy_grey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/green</item>
    </style>

    <style name="Theme.Utrun" parent="Base.Theme.Utrun" />

    <style name="LoginTextInputOuterFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="boxStrokeColor">@color/green</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusBottomEnd">35dp</item>
        <item name="boxCornerRadiusBottomStart">35dp</item>
        <item name="boxCornerRadiusTopEnd">35dp</item>
        <item name="boxCornerRadiusTopStart">35dp</item>
    </style>

    <style name="LoginTextInputInnerFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="titles">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">38sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="body_content">
        <item name="android:textColor">@color/Davy_grey</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Widget.MaterialComponents.TextInputLayout.ExposedDropdownMenu"
           parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
    </style>

</resources>